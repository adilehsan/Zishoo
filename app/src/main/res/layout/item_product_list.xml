<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/colorAccent"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivProduct"
            android:layout_width="@dimen/product_item_width"
            android:layout_height="@dimen/product_item_height"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/product_image"
            android:scaleType="fitXY">

        </ImageView>

        <com.ideologer.zamishoapp.utils.CustomTextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Long Frowk with Dupata"
            android:textColor="@color/black_color"
            android:textSize="14dp"
            app:custom_font="Montserrat-SemiBold.otf">

        </com.ideologer.zamishoapp.utils.CustomTextView>

        <com.ideologer.zamishoapp.utils.CustomTextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:text="Rs. 100"
            android:textColor="@color/black_color"
            android:textSize="14dp"
            app:custom_font="Montserrat-Bold.otf">

        </com.ideologer.zamishoapp.utils.CustomTextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_action_shipping"></ImageView>

            <com.ideologer.zamishoapp.utils.CustomTextView
                android:id="@+id/tvShippingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="shipping  Rs.100"
                android:textColor="@color/black_color"
                android:textSize="8dp"
                app:custom_font="Montserrat-Medium.otf">

            </com.ideologer.zamishoapp.utils.CustomTextView>

            <com.ideologer.zamishoapp.utils.CustomTextView
                android:id="@+id/tv_shipp_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="Rs.150"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="8dp"
                app:custom_font="Montserrat-Black.otf"></com.ideologer.zamishoapp.utils.CustomTextView>
        </LinearLayout>

        <com.ideologer.zamishoapp.utils.CustomTextView
            android:id="@+id/tvShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Start Sharing On.."
            android:textColor="@color/black_color"
            android:textSize="10dp"
            app:custom_font="Montserrat-Black.otf">

        </com.ideologer.zamishoapp.utils.CustomTextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent_white"
            android:orientation="horizontal"
            android:weightSum="4.5">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1.5"
                android:background="@drawable/whats_app_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"

                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/ic_action_whatsapp_white">

                </ImageView>

                <com.ideologer.zamishoapp.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Whats App"
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp"
                    app:custom_font="Montserrat-SemiBold.otf">

                </com.ideologer.zamishoapp.utils.CustomTextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_action_fb">

                </ImageView>

                <com.ideologer.zamishoapp.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:text="Facebook"
                    android:textColor="@color/black_color"
                    android:textSize="12dp"
                    app:custom_font="Montserrat-Medium.otf">

                </com.ideologer.zamishoapp.utils.CustomTextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_action_insta">

                </ImageView>

                <com.ideologer.zamishoapp.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:text="Instagram"
                    android:textColor="@color/black_color"
                    android:textSize="12dp"
                    app:custom_font="Montserrat-Medium.otf">

                </com.ideologer.zamishoapp.utils.CustomTextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_action_share_black">

                </ImageView>

                <com.ideologer.zamishoapp.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:text="Others"
                    android:textColor="@color/black_color"
                    android:textSize="12dp"
                    app:custom_font="Montserrat-Medium.otf">

                </com.ideologer.zamishoapp.utils.CustomTextView>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
