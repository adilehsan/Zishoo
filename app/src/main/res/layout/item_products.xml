<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/colorAccent"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/product_item_height">

            <ImageView
                android:id="@+id/ivProduct"
                android:layout_width="match_parent"
                android:layout_height="@dimen/product_item_height"
                android:background="@drawable/product_image"
                android:scaleType="fitXY"></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/transparent_white"
                android:orientation="vertical">

                <com.ideologer.zamishoapp.utils.CustomTextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    app:custom_font="Montserrat-SemiBold.otf"
                    android:text="Long Frowk with Dupata"
                    android:textColor="@color/black_color"
                    android:textSize="12dp">

                </com.ideologer.zamishoapp.utils.CustomTextView>

                <com.ideologer.zamishoapp.utils.CustomTextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="5dp"
                    android:text="Rs. 100"
                    app:custom_font="Montserrat-Bold.otf"
                    android:textColor="@color/black_color"
                    android:textSize="12dp">

                </com.ideologer.zamishoapp.utils.CustomTextView>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/colorAccent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_action_shipping"></ImageView>

                <com.ideologer.zamishoapp.utils.CustomTextView
                    android:id="@+id/tvShippingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="shipping  Rs.100"
                    android:textColor="@color/black_color"
                    android:textSize="8dp"
                    app:custom_font="Montserrat-Medium.otf">

                </com.ideologer.zamishoapp.utils.CustomTextView>

                <com.ideologer.zamishoapp.utils.CustomTextView
                    android:id="@+id/tv_shipp_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="Rs.150"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="8dp"
                    app:custom_font="Montserrat-Black.otf"></com.ideologer.zamishoapp.utils.CustomTextView>
            </LinearLayout>


        </LinearLayout>

        <com.ideologer.zamishoapp.utils.CustomTextView
            android:id="@+id/tvShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            app:custom_font="Montserrat-Black.otf"
            android:text="Start Sharing On.."
            android:textColor="@color/black_color"
            android:textSize="10dp"></com.ideologer.zamishoapp.utils.CustomTextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/transparent_white"
            android:orientation="horizontal"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout_whatsapp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1.2"
                android:background="@drawable/whats_app_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"

                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/ic_action_whatsapp_white">

                </ImageView>

                <com.ideologer.zamishoapp.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Whats App"
                    android:textColor="@color/colorAccent"
                    android:textSize="12dp"
                    app:custom_font="Montserrat-Medium.otf">

                </com.ideologer.zamishoapp.utils.CustomTextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/ic_action_share_black">

                </ImageView>

                <com.ideologer.zamishoapp.utils.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:text="Others"
                    app:custom_font="Montserrat-Medium.otf"
                    android:textColor="@color/black_color"
                    android:textSize="10dp">

                </com.ideologer.zamishoapp.utils.CustomTextView>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
