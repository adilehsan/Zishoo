<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:custom_font="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="56dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <com.ideologer.zamishoapp.utils.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="Share On"
        app:custom_font="Montserrat-ExtraBold.otf"
        android:textColor="@color/black_color"
        android:textSize="14dp"
       >

    </com.ideologer.zamishoapp.utils.CustomTextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@color/black_color"
        >

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/layout_fb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_action_fb">

            </ImageView>

            <com.ideologer.zamishoapp.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                app:custom_font="Montserrat-SemiBold.otf"
                android:text="Facebook"
                android:textColor="@color/black_color"
                android:textSize="14dp">

            </com.ideologer.zamishoapp.utils.CustomTextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_insta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_action_insta">

            </ImageView>

            <com.ideologer.zamishoapp.utils.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                app:custom_font="Montserrat-SemiBold.otf"
                android:gravity="center_vertical"
                android:text="Instagram"
                android:textColor="@color/black_color"
                android:textSize="14dp">

            </com.ideologer.zamishoapp.utils.CustomTextView>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
