<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/colorAccent"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <com.ideologer.zamishoapp.utils.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Rs. 25000"
            android:textColor="@color/colorPrimary"
            app:custom_font="Montserrat-SemiBold.otf"
            android:textSize="14dp"
          ></com.ideologer.zamishoapp.utils.CustomTextView>

        <com.ideologer.zamishoapp.utils.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            app:custom_font="Montserrat-Medium.otf"
            android:text="Rs. 25000 has be transferred to you bank account this transaction is you 15 days reward share more and earn more"
            android:textColor="@color/black_color"
            android:textSize="14dp"
            ></com.ideologer.zamishoapp.utils.CustomTextView>

        <com.ideologer.zamishoapp.utils.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:text="25 Dec 2020"
            app:custom_font="Montserrat-SemiBoldItalic.otf"
            android:textColor="@color/whats_color"
            android:textSize="12dp"
            android:textStyle="italic"></com.ideologer.zamishoapp.utils.CustomTextView>
    </LinearLayout>
</androidx.cardview.widget.CardView>
