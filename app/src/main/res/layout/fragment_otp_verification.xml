<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".ui.fragments.OtpVerificationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <com.ideologer.zamishoapp.utils.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Verify Your Account!"
            app:custom_font="Montserrat-Bold.otf"
            android:textColor="@color/black_color"
            android:textSize="14dp"
             />

        <com.ideologer.zamishoapp.utils.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            app:custom_font="Montserrat-Regular.otf"
            android:text="We have sent an OTP on your phone number"
            android:textColor="@color/black_color"
            android:textSize="12dp" />

        <com.ideologer.zamishoapp.utils.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMobileNumber"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            app:custom_font="Montserrat-Medium.otf"
            android:gravity="center"
            android:text="03236899601"
            android:textColor="@color/black_color"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/etCode"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginTop="35dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:backgroundTint="@color/colorPrimary"
            android:textCursorDrawable="@drawable/curser_color"
            android:hint="Enter OTP"
            android:inputType="number"
            android:maxLength="6"
            android:maxLines="1">

        </EditText>

        <com.ideologer.zamishoapp.utils.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            app:custom_font="Montserrat-Light.otf"
            android:gravity="center"
            android:text="Resend OTP in 50s"
            android:textColor="@color/black_color"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_btn"
            android:paddingLeft="50dp"
            android:paddingTop="10dp"
            android:paddingRight="50dp"
            android:paddingBottom="10dp"
            android:text="Verify"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"></Button>
    </LinearLayout>

</RelativeLayout>